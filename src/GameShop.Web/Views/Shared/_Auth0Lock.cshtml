@*This script will get a token from the Auth0 server to be included in every request to the GameShop API.*@

<script src="https://cdn.auth0.com/js/lock/10.4/lock.min.js"></script>
<script>
    var auth0Lock = new Auth0Lock(
    '@auth0Options.Value.ClientId', // Auth0 client ID for the GameShop Web API.
    '@auth0Options.Value.Domain', // GameShop API Auth0 domain.
    {
        auth:
        {
            redirectUrl: '@auth0Options.Value.CallbackUri', // Redirect URL should be in this project's domain. This will be the one called by Auth0 to pass the auth code.
            responseType: 'code',
            params:
            {
            scope: 'openid email' // Learn about scopes: https://auth0.com/docs/scopes
            }
        }
    });
</script>